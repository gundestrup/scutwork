<h1>Sign up as a new user</h1>
<% @user.password = @user.password_confirmation = nil %>

<% form_for :user, :url => users_path do |f| -%>
<%= f.error_messages %>

<p><%= f.label :name %><br/>
<%= f.text_field :name %></p>

<p><%= f.label :login %><br/>
<%= f.text_field :login %></p>

<p><%= f.label :email %><br/>
<%= f.text_field :email %></p>

<p><%= f.label :password %><br/>
<%= f.password_field :password %></p>

<p><%= f.label :password_confirmation %><br/>
<%= f.password_field :password_confirmation %></p>

    <p>
    <%= f.label :language %><br />
   <%= @languages = Language.find(:all, :order => "name")
        collection_select("user", "language_id", @languages, :id, :description ) %>
  </p>
<p><%= f.submit t("users.signup") %></p>
<% end -%>

  <h2 style="color:red">Please notice</h2>
<p>
  After signing up, you will get an activation email<br/>
  You have to activate your account before you can login.
</p>