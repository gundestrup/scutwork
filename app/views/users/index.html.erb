<h1><%= t('users.listing') %></h1>

<table>
  <tr>
    <th><%= t('name') %></th>
    <th><%= t('active') %>?</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= !user.activation_code.present? %></td>
    <td><%= link_to t('edit'), edit_user_path(user) %></td>
    <td><%= link_to t('destroy'), user, :confirm => t('are_you_sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% if current_user.admin? or $config.sign_up? %>
<%= link_to t('users.new'), ('/signup') %>
<% end %>